<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joelureellanah.calendar8.DeleteAppointment">

    <Button
        android:id="@+id/deleteAll"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:text="Delete All Appointment"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="92dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/deleteSingle"
        android:layout_alignStart="@+id/deleteSingle"
        android:layout_marginTop="96dp" />

    <Button
        android:id="@+id/deleteSingle"
        android:layout_width="338dp"
        android:layout_height="49dp"
        android:text="Select appointment to delete"
        tools:layout_editor_absoluteY="206dp"
        tools:layout_editor_absoluteX="18dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_date2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

</RelativeLayout>
